{% extends 'base.jinja2' %}

{% block content %}
<div class="loginbox request_password_change">
    <header>
        <h1>{{title}}</h1>
    </header>

    <form class="form" method="POST">
        {% if error %}
        <div class="error">{{error}}</div>
        {% endif %}
        <p class="login-box-title">{{description}}</p>

        <input type="hidden" name="next_view" value="{{next_view}}" />
        <input type="text" name="identifier" class="defaultfield" placeholder="{{ gettext('Email or username') }}" autofocus required />
        <input type="submit" name="change_password" value="{{ gettext('Send') }}" class="btn-purple" />
    </form>
</div>
{% endblock %}

{% block extra_js %}
<script type="text/javascript">requirejs(["main"]);</script>
{% endblock %}
