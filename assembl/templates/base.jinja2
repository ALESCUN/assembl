<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <title>{% block title %}Assebl{% endblock %}</title>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link href='//fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>
    <link type="text/css" rel="stylesheet" href="/static/css/style.css" />

    {% block extra_css %}{% endblock extra_css %}
    {% include 'includes/feature_detection.jinja2' %}
</head>
<body class="preload">
    <div id="wrapper">
        <header id="header">
            <div class="bar bar--main">
                <div class="bar-body">
                    <div class="bar-left">
                        <a id="assembl-mainbutton" class="iconbutton iconbutton--nofx icon-reorder"></a>

                        <img src="/static/img/assembl.png" alt="Assembl" />
                    </div>
                    <div class="bar-right">
                        Peter Parker {# todo: Change this name #}
                        <a class="iconbutton icon-cog"> </a>
                        <a class="iconbutton icon-user"> </a>
                    </div>
                </div>
            </div>
            {% block extra_header %}{% endblock %}
        </header>
        <main id="main">
            {% block content %}{% endblock %}
        </main>
    </div>

    <div id="templates">
        {% for template in templates %}
            {% set template_path = 'views/' + template + '.tmpl' %}
            <script id="tmpl-{{template}}" type="text/x-template">
                {% include template_path %}
            </script>
        {% endfor %}
    </div>
    
    <div id="lateralMenu" class="lateralmenu"></div>

    {% include 'includes/javascript.jinja2' %}

    {% block extra_js %}{% endblock %}
</body>
</html>
