{% extends 'base.jinja2' %}

{% block extra_header %}{% endblock %}

{% block content %}
    <div id="inbox"></div>

    <div id="message"></div>
{% endblock %}

{% block extra_js %}
<script type="text/javascript">
requirejs([
    "app",
    "jquery",
    "views/inbox",
    "views/lateralMenu",
    "views/bucket",
    "views/message",
    "models/email"
], function(app, $, Inbox, LateralMenu, Bucket, Message, Email){
    'use strict';

    app.init();

    // Inbox
    //app.inbox = new Inbox({collection: app.emails});
    //app.inbox.render();

    // Lateral menu
    app.lateralMenu = new LateralMenu({el: '#lateralMenu'}).render();
    $('#assembl-mainbutton').on('click', app.lateralMenu.trigger.bind(app.lateralMenu, 'toggle'));

    // Bucket
    app.bucket = new Bucket({el: '#bucket'}).render();
    app.on('lateralmenu.open', function(){
        app.bucket.setLeftMargin(app.lateralMenuWidth);
    });
    app.on('lateralmenu.close', function(){
        app.bucket.setLeftMargin(0);
    });

    // Message
    app.message = new Message({el: '#message'}).render();
    app.on('lateralmenu.open', function(){
        app.message.hideTooltip();
    });
    app.selectionTooltip.on('click', function(){
        app.selectionTooltip.hide();
        var segment = app.selectionTooltip.attr('data-segment');
        app.bucket.addSegment(segment);
    });


});
</script>
{% endblock %}
