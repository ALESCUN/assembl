{% extends 'base.jinja2' %}

{% block extra_header %}

    <div class="bar bar--title">
        <div class="bar-body">
            <div class="bar-left">
                <a href="#" class="arrowbutton">Previous</a>
            </div>

            <div class="bar-center">Table de Matières</div>

            <div class="bar-right">
                <a href="#" class="arrowbutton arrowbutton--right">Next</a>
            </div>
        </div>
    </div>

    <div class="bar">
        <div class="bar-body">
            <div class="bar-left">
                <a href="#" class="button">
                    <span class="icon icon-return"></span>
                </a>
            </div>

            <div class="bar-center">
                <div class="buttongroup">
                    <a class="button">En vendette</a>
                    <a class="button">Tout</a>
                    <a class="button">Activé</a>
                </div>
            </div>

            <div class="bar-right">
                <a class="button">
                    <span class="iconbutton icon-dropbox">
                        <span class="iconbutton-badge">2</span>
                    </span>
                </a>

                <a class="button">
                    <span class="iconbutton icon-uparrow"></span>
                </a>
            </div>
        </div>
    </div>
{% endblock %}


{% block content %}
    <ul id="esse" class="emaillist"></ul>

    <script id="tmpl" type="text/x-template">
        <span class="emaillist-checkbox">
            <input type="checkbox" />
        </span>
        <span class="emaillist-label">
            <% if (hasChildren) { %><span class="emaillist-label-arrow"></span><% } %>
            <%= subject %>
            {{ 'Simple list item with children ' * 8 }}
            <span class="emaillist-label-options">
                <a class="iconbutton iconbutton--fx icon-pencil"></a>
                <a class="iconbutton iconbutton--fx icon-rearrangeemail"></a>
                <a class="iconbutton iconbutton--fx icon-copyfolder"></a>
            </span>
        </span>
        <div class="fixedcounter"><%= total %></div>
    </script>
{% endblock %}

{% block extra_js %}
<script>
requirejs(["app", "views/emaillist"], function(app){
    app.init();
});
</script>
{% endblock %}
