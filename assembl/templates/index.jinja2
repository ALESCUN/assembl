    var SELECTION_CLASS = 'text-selection';

    function cleanSelection(){
        $('.text-selection').removeClass(SELECTION_CLASS);
    }

    function doTheSelection(ev){
        $('.bubble').remove();

        window.setTimeout(function(){
            var sel = document.getSelection();
            if( sel.type === "None" ){
                return;
            }

            var selectedText = sel.getRangeAt(0).cloneContents();
            if(selectedText.firstChild && selectedText.firstChild.textContent.length > 10 ){
                showBubble(ev.x, ev.y, selectedText.firstChild.textContent);
            }
        })
    }

    function showBubble(x, y, text){
        $('.bubble').remove();

        var div = $('<div>', { 'class': 'bubble' } );
        div.text('Segment this?');
        div.css('top', y - 30);
        div.css('left', x - 15);
        div.attr('data-segment', text);
        $(document.body).append(div);
        div.css('margin-left', div.width()/-2);

        div.click(function(ev){
            alert( div.attr('data-segment') );
        });
    }

    $('.text').on('mouseup', doTheSelection);

    //$(document).on('selectionchange', doTheSelection);
});
</script>
