<div class="gr">
  <div class="gu gu-1of5">
    <nav class="sidebar-nav">
        <ul class="man pan adminMenu">
          <li>
           	<a href="#user/profile" class="menu">{{ gettext('profile') }}</a>
          </li>
          <li>
						<a href="#user/account" class="menu">{{ gettext('account') }}</a>
					</li>
          <li class="active">
            <a href="#user/notifications" class="menu">{{ gettext('Notifications') }}</a>
          </li>
        </ul>
    </nav>
  </div>
  <div class="gu gu-3of4 admin-section">

    <div class="admin-title">
      <h3 class="h3">{{ gettext('Notifications') }}</h3>
    </div>
    <div id="content-container" class="content-container">
			<div class="bx bx-alert-success hidden">
				<button class="btn btn-cancel btn-xs bx-close" type="button">
					<i class="icon-delete"></i>
				</button>
				{{ gettext("You have been unsubscribed") }}
			</div>
      <div class="gr">
        <h4>{{ gettext('Currently you will be informed when:') }}</h4>
        <div class="mls">
					<form class="core-form">
						<fieldset>
							<% _.each(UserNotifications, function(subscription, index, list){ %>

								<div class="control-group">
									<label for="<%= subscription.get('@id') %>" class="control-label"></label>
									<div class="controls">
										<label class="checkbox">
											<input type="checkbox" class="js_userNotification" value="<%= subscription.get('@type') %>" <%= subscription.get('status') === 'ACTIVE' ? 'checked':'' %> id="<%= subscription.get('@id') %>">
											<%= i18n.gettext(subscription.get('human_readable_description')) %>
										</label>
									</div>
								</div>

							<% }) %>
						</fieldset>
					</form>

          <form class="core-form">
            <fieldset>
              <% _.each(addableGlobalSubscriptions, function(subscription, index, list){ %>
               <% if(isUserSubscribed){ %>
									<div class="control-group">
										<label for="<%= subscription.get('@id') %>" class="control-label"></label>
										<div class="controls">
											<label class="checkbox">
												<input type="checkbox" class="js_userNewNotification" value="<%= subscription.get('@type') %>" id="<%= subscription.get('@id') %>">
												<%= i18n.gettext(subscription.get('human_readable_description')) %>
											</label>
										</div>
									</div>
                <% } else { %>
                  <div class="control-group">
										<label for="<%= subscription.get('@id') %>" class="control-label"></label>
										<div class="controls">
											<label class="checkbox">
												<input type="checkbox" class="" value="<%= subscription.get('@type') %>" id="<%= subscription.get('@id') %>" disabled="disabled">
												<%= i18n.gettext(subscription.get('human_readable_description')) %>
											</label>
										</div>
									</div>
                <% } %>
              <% }) %>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <% if(isUserSubscribed){ %>
      <button class="btn btn-primary mls js_unSubscription">{{ gettext('Unsubscribe') }}</button>
    <% } %>

      <div class="mls mtxl"><h4 class="h4"><a href="/{{ discussion.slug }}/">{{ gettext('Back to discussion') }}</a></h4></div>
  </div>
</div>