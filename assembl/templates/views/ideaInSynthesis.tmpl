{# TODO:  Get rid of all inline styles #}
<div class="panel-editablebox <% if(editing ) { %>is-editing<% } %>" style="padding-top: 10px; padding-left: <%= level > 0 ? (15 * level)+15 : 15 %>px; background-image: url({{ request.resource_url(request.root, 'static', 'img', 'panel', 'disc.gif') }}); background-position: <%= level > 0 ? (15 * level)+5 : 5 %>px 18px; background-repeat: no-repeat;">
    
    <div class="panel-editablearea synthesis-expression" data-idea-id="<%= id %>" style="margin: 0; margin-left: 5px; display: inline-block; width: auto; vertical-align: top;">
    </div>

    <div style="line-height: 2em;">
        <% if( authors.length ) { %>
            {{ gettext('By') }}
        <% } %>
        <% _.each(authors, function(author, index, list) { %>
            <img src="<%= author.getAvatarUrl(30) %>" alt="{{ gettext('Avatar for') }} <%= author.get('name') %>"  class="image-rounded" width="30" height="30" />
            <i style='font-style: italic;font-size:80%;'><%= author.get('name') %></i><% if( index < list.length-1 ) { %>,<% } %>
        <% }) %>
        (<a class = "synthesisIdea-replybox-openbtn" href="#">{{ gettext('react') }}</a>)
        <div class="synthesisIdea-replybox hidden"></div>
    </div>

</div>
