<div class="navbar-center tac">
<% if( Ctx.canUseExpertInterface() ){ %>
  <% if( Ctx.getCurrentInterfaceType() === Ctx.InterfaceTypes.EXPERT ) { %>
    <a class="btn btn-secondary btn-sm add-group js_addGroup"><i class="icon-add"></i> {{ gettext('Add a new panel group') }}</a>
    <a class="btn btn-sm btn-default js_switchToSimpleInterface">{{ gettext('Switch to participant mode') }}</a>
  <% } else { %>
    <a class="btn btn-sm btn-default js_switchToExpertInterface">{{ gettext('Switch to expert mode') }}</a>
  <% } %>
<% } %>
</div>
<div class="navbar-left">
    <a href="/" class="assembl-logo" class="sign-in">Assembl <i class="icon-infinite"></i></a>
    <span id="onlinedot" class="onlinedot">
        <small class="dot-offline">&nbsp;&nbsp;&nbsp;{{ gettext('Connecting...') }}</small>
        <span class="dot-online theme_navbarDebateName"><span class="breadcrumb-level-indicator"></span> <span class="debate-icon icon-discuss"></span> {{ discussion.topic }}</span>
    </span>
</div>
<div class="navbar-right">
  <div>
    <div class="dispib vat">
      {% if user %}
        <% if( _.isEmpty(Roles) && canSubscribeToDiscussion ){ %>
          <a href="#" class="btn btn-primary btn-sm js_joinDiscussion joinDiscussion">{{ gettext('subscribe to discussion') }}</a>
        <% } %>
      {% else %}
        {% if request.current_route_path() != "/login" %}
            {% if request.current_route_path() != "/register" %}
                <a href="/login?next_view={{request.current_route_path()}}" class="btn btn-primary btn-sm joinDiscussion js_needJoinDiscussion" >{{ gettext('subscribe to discussion') }}</a>
            {% endif %}
        {% endif %}
      {% endif %}
    </div>
    <div class="dispib">
      <ul class="connexion man">
      {% if user %}
      	<li class="dropdown fl mll">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="avatar img-rounded fl mtxs">
							<img height="25" width="25" src="/user/id/{{user.id}}/avatar/25" alt="{{ user.display_name() }}"/>
						</span>
						<span class="mlxs">{{ user.display_name() }}</span>
						<span class="icon-arrowdown"></span>
					</a>
					<ul class="dropdown-menu">
						{% if user_profile_edit_url %}
					    <li><a href="{{ user_profile_edit_url }}">{{ gettext('Edit your profile') }}</a></li>
						{% endif %}
						<li><a href="<%= urlNotifications() %>">{{ gettext('notifications') }}</a></li>
            <li><a href="<%= urlLogOut() %>" class="sign-out">{{ gettext('Sign out') }}</a></li>
					</ul>
      	</li>
      	{# User notifications
      	<li class="dropdown fl mll">
      	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      	  	<span class="dropdown-arrow icon-bell"></span>
						<span class="icon-arrowdown"></span>
					</a>
					<ul class="dropdown-menu">
						<li><a href="#">Notification 1</a></li>
						<li><a href="#">Notification 2</a></li>
						<li><a href="#">Notification 3</a></li>
					</ul>
      	</li>
      	#}
			{% else %}
			  {% if request.current_route_path() != "/login" %}
          {% if request.current_route_path() != "/register" %}
					<li class="fl mll">
						<a href="/login?next_view={{request.current_route_path()}}" class="btn btn-default btn-xs">{{ gettext('Sign in') }}</a>
					</li>
					{% endif %}
				{% endif %}
			{% endif %}
      	<li class="dropdown fl mll">
          {% if locales.__len__ > 1 %}
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							{{locale | upper}}
							<span class="icon-arrowdown"></span>
						</a>
						<ul class="dropdown-menu">
							{% for loc in locales %}
								{% if (loc != locale) %}
								<li><a tabindex="-1" href="#" class="lang js_setLocale" data-locale='{{loc}}'>
									 {{loc | upper}}
								</a></li>
								{% endif %}
							{% endfor %}
						</ul>
					{% endif %}
      	</li>
      </ul>
    </div>
  </div>
</div>

