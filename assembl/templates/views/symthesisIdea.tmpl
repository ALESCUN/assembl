<% if( ! editing ) { %>
<div class="idealist-body">
    <% if (hasCheckbox) { %>
    <label class="chk chk--idealist">
        <input type="checkbox" class="chk-checkbox" <% if(inSynthesis) { %>checked="checked"<% } %> />
        <span class="chk-label"></span>
    </label>
    <% }  %>

    <% for( var i=1; i<level; i+= 1) { %>
        <span class="idealist-bar"></span>
    <% } %>
    
    <% if (children.length > 0) { %>
        <span class="idealist-arrow"></span>
    <% } %>

    <div class="idealist-title">
        <%= app.stripHtml(longTitle) %>
    </div>
</div>

<% } else { %>

<div class="idealist-body">
    <span class="closebutton closebutton--ckeditor"></span>
    <div class="box box--collapsed margin">
        <div class="idealist-contenteditable" contenteditable> <%= longTitle %> </div>
    </div>

    <div class="text-right padding"><a class="button button--primary idealist-savebtn">Save</a></div>
</div>

<% } %>

<div class="idealist-children"></div>
