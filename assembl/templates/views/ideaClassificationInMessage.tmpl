<% if (count > 0) { %>
    <span>{{gettext("This message is visible in the following ideas:")}}</span>
    <span>
        <% if (count === 1) { %>
            <span class=" idea-name js_idea-classification-idea"><%= first[0] %></span>
        <% }%>

        <%if (count === 2) { %>
            <span class="idea-name js_idea-classification-idea"><%= first[0] %></span>
            <span><%= i18n.gettext("and") %></span>
            <span class="idea-name js_idea-classification-idea"><%= first[1] %></span>
        <% } else { %>

            <% _.each(first, function(n){ %>
                <span class="idea-name js_idea-classification-idea"><%= n %></span>
            <% })%>
            <% if (rest) { %>
                <%= i18n.sprintf(i18n.gettext("and <span class=\"idea-name js_idea-classification-idea\">%s others</span>"), rest.length)%>
            <% } %>
        <% } %>
    </span>

<% } %>
