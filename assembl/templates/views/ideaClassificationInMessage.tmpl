<% if (count > 0) { %>
    <span><%= linked_to_msg %></span>
    <a class="js_idea-classification-idea">
        <% _.each(first, function(n){ %>
            <span class="idea-name"><%= n %></span>
        <% })%>
        <% if (rest.length > 0 ) { %>
            <span class="idea-name"><%= other_ideas_msg %></span>
        <% } %>
    </a>
<% } %>
