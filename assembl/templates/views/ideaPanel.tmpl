{% macro showShareButton() -%}
<a href="<%= direct_link_relative_url %>" data-href="<%= share_link_url %>" class="js_openTargetInPopOver" data-popover-width="300" data-popover-height="71" data-popover-scrolling=""><i class="icon-download"></i>{{ gettext("Share") }}</a>
{%- endmacro %}
<div class="panel-body">
    <% if( idea ) { %>
    <div id="ideaPanel-shorttitle" class="panel-content-title" data-toggle="tooltip" title="{{gettext('The name of this idea in the table of ideas')}}"></div>

    <fieldset class="panel-section ideaPanel-section-actions">
        <div>{{ showShareButton() }}</div>
    </fieldset>

    <fieldset id="ideaPanel-section-summary" class="panel-section">
      <div class="section-title">
        <i class="icon icon-user"></i><span class="title-text">{{ gettext('About this idea') }}</span>
      </div>

        <% if (canEditNextSynthesis) { %>
          <% if (Ctx.getCurrentInterfaceType() != Ctx.InterfaceTypes.SIMPLE) { %>
            <span class="sub-section-title">{{ gettext('Expression in next synthesis') }}</span>
            <% if( editingTitle ) { %>
              <div class="ideaPanel-longtitle-editor"></div>
            <% } else { %>
              <div class="ideaPanel-longtitle js_editLongTitle" class="mbs" data-toggle="tooltip" title="{{gettext('Expression of this idea in the next synthesis.  You may want to edit them all together in the synthesis panel rather than here.')}}">
                <%= idea.getLongTitleDisplayText() %>
              </div>
            <% } %>
          <% } %>
        <% } %>

        <% if (Ctx.getCurrentInterfaceType() != Ctx.InterfaceTypes.SIMPLE) { %>
          <span class="sub-section-title">{{ gettext('Description of this idea') }}</span>
        <% } %>

        <% if( editingDefinition ) { %>
            <div class="ideaPanel-definition-editor"></div>
        <% } else { %>
            <% if (canEdit) { %>
               <% if(idea.get('definition').length){ %>
                 <div class="ideaPanel-definition js_editDefinition" data-toggle="tooltip" title="{{gettext('A description of this idea')}}">
                   <%= idea.get('definition') %>
                 </div>
               <% } else { %>
                 <div class="add-description js_editDefinition">
                   <i class="icon icon-add"></i> {{ gettext('Add a description') }}
                 </div>
               <% } %>
            <% } else { %>
              <div class="ideaPanel-definition disconnected" data-toggle="tooltip" title="{{gettext('A description of this idea')}}">
                 <%= idea.get('definition') %>
              </div>
            <% } %>
            <% if(idea.get('definition').length){ %>
                <div class="ideaPanel-seeMoreOrLess js_seeMoreOrLess mts">
                  <a href="#" class="seeMore js_seeMore txt-gray">{{ gettext('See more') }}<i class="icon icon-arrowdown"></i></a>
                </div>
                <a href="#" class="seeLess js_seeLess txt-gray hidden">{{ gettext('See less') }}<i class="icon icon-arrowup"></i></a>
            <% } %>
        <% } %>

        <% if (canEdit) { %>
          <fieldset class="ideaPanel-section-announcement">
            <legend class="sub-section-title">{{ gettext('Announcement for this idea') }}</legend>
            <div class="ideaPanel-announcement-region hidden"></div>
          </fieldset>
        <% } %>

        <p class="text-muted">{% set creationDate = "<%= app.formatDate(idea.get('creationDate')) %>" %}</p>

        {#<% if (Ctx.getCurrentInterfaceType() != Ctx.InterfaceTypes.SIMPLE) { %>
          <div id="ideaPanel-comment"></div>
        <% } %>#}
    </fieldset>

    {# section contributor #}
    <fieldset class="ideaPanel-section-contributors panel-section hidden">
      <div class="section-title" data-toggle="tooltip" title="{{gettext('Contributors')}}">
         <i class="icon icon-user"></i><span class="title-text">{{ gettext('Contributors') }}</span>
      </div>
      <div class="gr mts contributors"></div>
    </fieldset>

    <fieldset class="panel-section ideaPanel-section-widgets mtxl">
        <div class="ideaPanel-section-access-widgets"></div>
    </fieldset>

    {#<fieldset id="ideaPanel-section-subideas" class="panel-section">
        <legend data-toggle="tooltip" title="{{gettext('The children of this idea.')}}">
            <span><% print(getSubIdeasLabel(subIdeas)) %></span>
        </legend>
        <div class="idealist">
            <% _.each(subIdeas, function(subIdea, i){ %>
                <div class='subidea'><% print(subIdea.getShortTitleDisplayText()); %></div>
            <% }); %>
        </div>
    </fieldset>#}

    <fieldset id="ideaPanel-section-segments" class="panel-section">
      <% if(canAddExtracts){ %>
        <div class="ideaPanel-section-segments-legend section-title" data-toggle="tooltip" title="{{gettext('Expressions of this idea in messages or on the web')}}">
           <i class="icon icon-diamond"></i><span class="js_extractsSummary title-text"><% print(getExtractsLabel()) %></span>
        </div>
      <% } else { %>
      <div class="ideaPanel-section-segments-legend section-title" data-toggle="tooltip" title="">
          <i class="icon icon-diamond"></i><span class="js_extractsSummary title-text">{{ gettext('Nuggets are important expressions of this idea in messages or on the web') }}</span>
      </div>
      <% } %>

      <div class="postitlist"></div>

      <% if (canAddExtracts) { %>
      <div class="mbs">
          <p>{{ gettext('Add extracts by dragging them in this panel from the clipboard or messages') }}</p>
      </div>
      <% } %>

    </fieldset>

    <fieldset class="panel-section ideaPanel-section-widgets-admin">
    <ul>
      <% if (canDelete) { %>
      <div class="fr">
          <a href="#" class="js_ideaPanel-deleteBtn" data-toggle="tooltip" title="{{gettext('Delete this idea completely')}}">{{ gettext('Delete idea') }}</a>
      </div>
      <% }

      if (canEditExtracts) { %>
      <a href="#" class="js_ideaPanel-clearBtn" data-toggle="tooltip" title="{{gettext('Remove all extracts from this idea.  Removed extracts will be available in your clipboard')}}">{{ gettext('Remove all extracts') }}</a>
      <% } %>

    <div class="ideaPanel-section-conf-widgets"></div>
    <div class="ideaPanel-section-create-widgets"></div>
    </ul>
    </fieldset>

    <% } else { %>
        <div class="emptyIdeaPanelContainer phs">
            <div class="emptyIdeaPanelContent">
                <p class="tac emptyIdeaIcon"><i class="icon icon-idea"></i></p>
                <p class="helperIdea tac">{{ gettext('No idea selected') }}</p>
                <p class="tac mvl">{{ gettext('Choose an idea in the Table of ideas to explore the discussion or close this panel as you will have open')}}</p>
                <p class="emptyIdeaIcon2 tac mtxl"><i class="icon icon-imported"></i></p>
            </div>
        </div>
    <% } %>
</div>
