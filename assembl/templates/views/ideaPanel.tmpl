<div class="panel" draggable="draggable">

    <div class="panel-header">
        Current Idea
        <div class="float-right">
            <a id="ideaPanel-closebutton" class="text-muted">&times</a>
        </div>
    </div>
    
    <div class="panel-body">
        <div class="margin text-muted">Short title</div>
        <div id="ideaPanel-shorttitle" class="margin" contenteditable="true"><%= idea.get('shortTitle') %></div>
        
        <div class="spacer"></div>
        
        <div class="margin text-muted">Long title</div>
        <div id="ideaPanel-longtitle" class="text margin" contenteditable="true"><%= idea.get('longTitle') %></div>

        <div class="spacer"></div>

        <p class="text-muted margin">
            Créé le <%= app.formatDate(idea.get('creationDate')) %>, par Jean-Michel
        </p>
            

        <div class="boxlist">
            
            <% idea.get('segments').each(function(segment, i){ %>
                <div class="box" draggable="true">
                    <span class="closebutton">&times;</span>

                    <q><%= segment.get('text') %></q>

                    <div class="spacer spacer--huge"></div>

                    <div class="media">
                        <div class="media-imgleft">
                            <img src="//placehold.it/44x44" class="image-rounded" alt="" />
                        </div>
                        <div class="media-body">
                            <div class="media-title"><strong>Joey Ramone</strong></div>
                            <div>Attrapé il y a 1 jours</div>
                        </div>
                    </div>
                </div>
            <% }); %>
            
            <div class="box box--dashed box--centered margin text-muted text-big">
                Ajouter des extraits
            </div>

        </div>

    </div>

    <div class="panel-footer">
        <a id="ideaPanel-clearbutton" class="text-muted">Clear ?</a>
    </div>

</div>
