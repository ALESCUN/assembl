    <span class="indice 
        <% if (read){ %>
            js_message-markasunread
        <% } else { %>
            js_message-markasread
        <% } %>"
        data-toggle="tooltip" title="
        <% if (read){ %>
            {{ gettext('Mark as unread') }}
        <% } else { %>
            {{ gettext('Mark as read') }}
        <% } %>"
        data-placement="left"
        >
        </span>
