
<header class="message-header">
    <div class="float-left">
        <img src="<%= creator.getAvatarUrl(30) %>" alt="{{ gettext('User') }}"  class="image-rounded" width="30" height="30" />
    </div>
{% set userName = "<%= creator.get('name') %>" %}
{% set time = "<%= date %>" %}
<% if ( viewStyle == app.AVAILABLE_MESSAGE_VIEW_STYLES.TITLE_ONLY ){ %>
    <div class="message-date">{{ gettext('<time>%(time)s</time>')|format(time=time)|safe }}</div>
    <div class="message-subheader">
        <span class="message-author margin-right">{{ gettext('%(user)s')|format(user=userName)|safe }}
        </span>
        <span class="message-subject margin-right"><%= subject %></span>
        {# <span class="text-muted"><%= app.stripHtml(body) %></span> #}
    </div>
</header>
<% } else if ( viewStyle == app.AVAILABLE_MESSAGE_VIEW_STYLES.PREVIEW ){ %>
    <div class="message-date">{{ gettext('<time>%(time)s</time>')|format(time=time)|safe }}</div>
    <div class="message-subheader">
        <span class="message-author margin-right">{{ gettext('%(user)s')|format(user=userName)|safe }}
        </span>
        <span class="message-subject margin-right"><%= subject %></span>
    </div>
<% } else if ( viewStyle == app.AVAILABLE_MESSAGE_VIEW_STYLES.FULL_BODY ){ %>
    <div class="message-subheader">
        <span class="message-author">{{ gettext('%(user)s')|format(user=userName)|safe }}
        </span>
        |
        <span class="message-date">{{ gettext('<time>%(time)s</time>')|format(time=time)|safe }}</span>
        <div><span class="message-subject"><%= subject %></span></div>
    </div>
</header>
<% } %>
</div>

{# Note:  bodyFormatClass can currently have values body_format_text_plain or  body_format_text_html #}
<% if( viewStyle == app.AVAILABLE_MESSAGE_VIEW_STYLES.PREVIEW ){ %>
<div class="message-body <%= bodyFormatClass %> ellipsis" id="<%= messageBodyId %>">
    <div><%= body %><i></i></div>{# Do NOT introduce whitespace within this div #}
    <a class="readmore" href="#" alt="{{ gettext('Read More') }}">{{ gettext('Read More') }}</a>
</div>
</header>
<% } 
else if( viewStyle == app.AVAILABLE_MESSAGE_VIEW_STYLES.FULL_BODY ){ %>
<div class="message-body  <%= bodyFormatClass %>" id="<%= messageBodyId %>"><%= body %></div>

<div class="message-replybox hidden"></div>

<div class="message-menu">
    {#
    <% if( isHoisted == true ){ %>
        <a class="message-hoistbtn iconbutton icon-upload" data-id="<%= escape(id) %>" data-tooltip="{{gettext('Go back to the entire topic thread')}}"></a>
    <% } else { %>
        <a class="message-hoistbtn iconbutton icon-download" data-id="<%= escape(id) %>" data-tooltip="{{gettext('Show only this message and its replies')}}"></a>
    <% } %>

    <a class="message-linkbutton iconbutton icon-link" data-copy-text="/message/<%= escape(id) %>" data-tooltip="{{gettext('Copy the link to this message to clipboard')}}"></a>
    #}

    <a class="message-replybox-openbtn button"><i class="icon-reply"></i> {{ gettext("Reply") }}</a>
    
    <div class="dropdown">
        <span class="dropdown-label dropdown-label--arrow"></span>
        <ul class="dropdown-list dropdown-list--bottomright">
            <% if (user_is_connected){ %>
                <% if (read){ %>
                    <li id="message-markasunread" class="dropdown-listitem"><a class="iconbutton"></a> {{ gettext('Mark as unread') }}</li>
                <% } else { %>
                    <li id="message-markasread" class="dropdown-listitem"><a class="iconbutton"></a> {{ gettext('Mark as read') }}</li>
                <% } %>
            <% } %>

            <% if( isHoisted == true ){ %>
                <li class="dropdown-listitem message-hoistbtn" data-id="<%= escape(id) %>"><a class="iconbutton icon-upload"></a> {{gettext('Go back to the entire topic thread')}}</li>
            <% } else { %>
                <li class="dropdown-listitem message-hoistbtn" data-id="<%= escape(id) %>"><a class="iconbutton icon-download"></a> {{gettext('Show only this message and its replies')}}</li>
            <% } %>
            
            <li class="dropdown-listitem message-linkbutton" data-copy-text="/message/<%= escape(id) %>"><a class="iconbutton icon-link"></a> {{gettext('Copy the link to this message to clipboard')}}</li>

            <% if (creator.get('email')) { %>
            <li class="dropdown-listitem">
                <a class="iconbutton icon-mail" title="<%= creator.get('email') %>" href="mailto:<%= creator.get('email') %>"></a>
                {{gettext('Send an email to this user')}}
            </li>
            <% } %>
        </ul>
    </div>
</div>

<% } %>

