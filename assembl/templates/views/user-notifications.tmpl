<h2 class="h2">User Notifications</h2>
<% if(UserNotifications.length) { %>
<form class="core-form form-horizontal">
  <fieldset>
    <% _.each(UserNotifications, function(notification, index, list){ %>

      <div class="control-group mts">
        <label for="<%= notification.get('@id') %>" class="control-label"></label>
        <div class="controls">
          <label class="checkbox">
            <input type="checkbox" class="js_userNotification" value="<%= notification.get('@type') %>" <%= notification.get('status') === 'ACTIVE' ? 'checked':'' %> id="<%= notification.get('@id') %>">
            <%= notification.get('@type') %>
          </label>
        </div>
      </div>

    <% }) %>
  </fieldset>
</form>
<% } %>