<h2 class="h2">Discucssion Notifications</h2>
<% if(DiscussionNotifications.length) { %>
<form class="core-form form-horizontal">
  <fieldset>
    <% _.each(DiscussionNotifications, function(notification, index, list){ %>

      <div class="control-group mts">
        <label for="optionsCheckbox" class="control-label"></label>
        <div class="controls">
          <label class="checkbox">
            <input type="checkbox" class="js_discussionNotification" value="<%= notification.get('@type') %>" <%= notification.get('status') === 'ACTIVE' ? 'checked':'' %> id="optionsCheckbox">
            <%= notification.get('@type') %>
          </label>
        </div>
      </div>

    <% }) %>
  </fieldset>
</form>
<% } %>

