<% if (canAdd) { %>
	<div class="panel-body panel-body--has-footer">
<% } else { %>
	<div class="panel-body">
<% } %>
		<div class="pvxs">
			<span class="pls txt-gray1">{{ gettext('Table of ideas') }}</span>
			<% if (canAdd) { %>
				<span class="idealist-actions">
						<a href="#" class="js_ideaList-addbutton" class="btn btn-default btn-xs">
								<i class="icon-add-2"></i> {{ gettext('Add idea') }}
						</a>
				</span>
			<% } %>
		</div>
		<div id="idealist-list" class="idealist">
			<div class="ideaView"></div>
			<div class="otherView"></div>
			<div class="synthesisView"></div>
			<div class="orphanView"></div>
			<div class="allMessagesView"></div>
		</div>
		<div id="idealist-graph" style="display: none;">
				<div id="infovis" width="100%" height="100%"></div>
				<div id="inner-details"></div>
		</div>
</div>


