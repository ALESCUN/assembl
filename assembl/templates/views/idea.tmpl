<div class="idealist-body" draggable="true">
    <% if (hasCheckbox) { %>
    <label class="chk chk--idealist">
        <input type="checkbox" class="chk-checkbox" <% if(inNextSynthesis) { %>checked="checked"<% } %> />
        <span class="chk-label" data-toggle="tooltip" data-placement="right"
         <% if(inNextSynthesis) { %>title="{{ gettext('Remove from next synthesis') }}"<% } else { %>title="{{ gettext('Add to next synthesis') }}"<% } %> ></span>
    </label>
    <% }  %>
    <%  var i;
    for( var i=1; i<level; i+= 1) { 
        if (last_sibling_chain[i]) { %>
            <span class="idealist-space"></span>
        <% } else { %>
            <span class="idealist-bar"></span>
        <% }
    } %>
    <% if (level > 0) {
        if (is_last_sibling) { %>
            <span class="idealist-link-last"></span>
        <% } else { %>
            <span class="idealist-link"></span>
        <% }
    } %>


    <% if (children.length > 0) { 
        if (level > 0) { %>
            <span class="idealist-arrow"></span>
        <% } else { %>
            <span class="idealist-arrow level1"></span>
        <% }
       } else { 
        if (level > 0) { %>
            <span class="idealist-noarrow"></span>
        <% } else { %>
            <span class="idealist-space"></span>
        <% }
    } %>

    <% var num_unread_posts = (num_posts - num_read_posts); %>

    <div class="idealist-counter" data-toggle="tooltip" title="{{ gettext('Number of messages related to this idea or its descendants') }}">
        <span><%= num_posts %></span>
    </div>
    <div class="idealist-title<% if (num_unread_posts > 0) { %> idealist-title-unread<% } %>" title="<%= shortTitle %>">
        <%= shortTitle %>
        <% if (num_unread_posts > 0) { %>
        <span class="idealist-title-unread-count" data-toggle="tooltip" title="{{ gettext('Number of unread messages related to this idea or its descendants') }}">(<%= num_unread_posts %>)</span>
        <% } %>
        {# (<span class="num-segments" data-toggle="tooltip" title="{{ gettext('Number of caught segments expressing this idea') }}"><%= segments.length %></span>) #}
        {# <small class="idealist-longtitle text-small text-muted"><%= app.stripHtml(longTitle) %></small> #}
    </div>

    <div class="idealist-abovedropzone"></div>
    <div class="idealist-dropzone"></div>
</div>

<div class="idealist-children"></div>
