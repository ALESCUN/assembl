<% if (hasCheckbox) { %>
<label class="chk chk--idealist">
    <input type="checkbox" class="chk-checkbox" />
    
    <span class="chk-label"></span>
</label>
<% }  %>
<span class="idealist-label <% if (hasOptions) { %>has-options<% } %>" data-algo="<%= new Date().getTime() %>">
    <% if (hasChildren) { %><span class="idealist-label-arrow"></span><% } %>
    
    <span class="idealist-title"><%= subject %></span>

    <input type="text" class="idealist-field" hidden />

    <span class="idealist-label-options">
        <a class="iconbutton icon-pencil"></a>
        <a class="iconbutton icon-rearrangeemail"></a>
        <a class="iconbutton icon-copyfolder"></a>
    </span>
</span>
<div class="fixedcounter"><%= total %></div>

<div class="idealist-children"></div>
