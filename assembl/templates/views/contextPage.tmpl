<style>
.panelarea { /* we override default panels behavior */
    bottom: 0;
    min-height: initial;
    overflow: auto;
}


.panel-content {
    width: 100%;
    height: 100%;
    /*min-height: 700px;*/
    overflow-x: auto;
    overflow-y: auto;
    white-space: normal;
}
.row-major, .row-minor {
    clear: both;
    vertical-align: top;
    padding: 0px 4px 8px 4px;
}
.row-minor { 
    background: #ddd;
    min-height: 200px;
}
.row-major {
    background: #fff;
    height: 300px;
}
.block-half {
    width: 48%;
    display: inline-block;
    /*float: left;*/
    vertical-align: top;
}
.block-full {
    width: 100%;
}

.block-content {
    padding: 2px 10px;
}

.block-content ul li {
    margin-bottom: 6px;
}


#introduction-details,
#introduction-button-see-less,
#introduction-button-see-more {
    display: none;
}









/* CSS associated to the line chart */

.data-line {
    stroke: steelblue;
    stroke-width: 2;
    fill: none;
    stroke-dasharray: 0;
}

path {
    stroke: #eee;
    stroke-width: 2;
    stroke-dasharray: 0;
    fill: none;
}

.area {
    fill: lightsteelblue;
}

text {
    font-family: Arial;
    font-size: 8pt;
    fill: #787878;
}

line {
    stroke: #CDCDCD;
    stroke-width: 0.5;
    /* stroke-dasharray: 3 3; */
    fill: none;
}

.data-point {
    stroke: steelblue;
    stroke-width: 2;
    fill: #FFF;
}

#chart {
    margin: 0;
}





/* CSS associated to the pie */

.pie {
    height: 300px;
    vertical-align: top;
}

.code_hierarchy
{
    margin:0 auto;
    width: 100%;
    height: 100%;
    vertical-align: top;
    text-align: center;
}

.code_hierarchy_legend
{
    height:80px;
}

.pie svg {
    margin: 0 auto;
    text-align: center;
}







</style>


<div class="panel-content">
    <div class="row-minor">
        <div class="block-half">
            <div class="block-content">
                <h2>{{ gettext('Introduction') }}</h2>
                <div class="introduction">
                </div>
                <div id="introduction-details">
                    <div class="introduction-details">
                    </div>
                </div>
                <button id="introduction-button-see-more" onclick="introductionToggle();">Voir plus</button>
                <button id="introduction-button-see-less" onclick="introductionToggle();">Voir moins</button>
                <div class="introduction-details-empty">
                </div>
                
            </div>
        </div>
        <div class="block-half">
            <div class="block-content">
                <h2>{{ gettext('Objectives') }}</h2>
                <div class="objectives">
                </div>
            </div>
        </div>
    </div>
    {#
    <div class="row-major">
        <div class="block-full">
            <div class="block-content">
                <h2>{{ gettext('Timeline') }}</h2>
                <p>
                    Blabla
                </p>
            </div>
        </div>
    </div>
    #}
    <div class="row-minor">
        <div class="block-full">
            <div class="block-content">
                <h2>{{ gettext('Instigator') }}</h2>
                <div class="instigator">
                </div>
            </div>
        </div>

        {#
        <div class="block-half">
            <div class="block-content">
                <h2>{{ gettext('Facilitators') }}</h2>
                <p>
                    Blabla
                </p>
            </div>
        </div>
        #}

    </div>
    <div class="row-major">
        <div class="block-half">
            <div class="block-content">
                <div class="statistics">
                    <h2>{{ gettext('Statistics') }}</h2>
                    <p>&nbsp;</p>
                </div>
                <div class="chart">{{ gettext('Loading...') }}</div>
            </div>
        </div>
        <div class="block-half">
            <div class="block-content pie">
                <div class='code_hierarchy_legend'></div>
                <div class='code_hierarchy'>
            </div>
        </div>
    </div>
    <div style="margin-top: 100px;"></div>
</div>

<script>
function introductionToggle(){
    $('#introduction-details').toggle(200);
    $('#introduction-button-see-more').toggle();
    $('#introduction-button-see-less').toggle();
}
</script>
