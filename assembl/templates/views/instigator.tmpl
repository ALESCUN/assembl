<div class="gr mts">
   <div class="gu gu-1of2">
    <div class="block-content">
		 <% if( _.size(instigator.get('description')) || userCanEditDiscussion){ %>
				<% if(userCanEditDiscussion){ %>
					<h2>{{ gettext('Instigated by') }}</h2> <a href="<%= editInstigatorUrl() %>"> {{ gettext('edit instigator') }} </a>
				<% }else{ %>
					<h2>{{ gettext('Instigated by') }}</h2>
				<% } %>
				<% if( editInstigator ) { %>
					 <div class="instigator-editor"></div>
				<% } else if (_.size(instigator.get('description')) === 0) { %>
           <div>{{ gettext('there are no instigator for this discussion') }} - <a href="<%= editInstigatorUrl() %>"> {{ gettext('edit instigator') }} </a></div>
				 <% } else { %>
					<div class="instigator js_editDescription"><%= context.get('description') %></div>
			 <% } %>
		 <% } %>
    </div>
   </div>
   <div class="gu gu-last">
    <div class="block-content">
    	<% if( _.size(instigator.get('logo')) ){ %>
      	<div class="tac"><img src="<%= instigator.get('logo') %>" height="51" ></div>
      <% } %>
    </div>
   </div>
</div>