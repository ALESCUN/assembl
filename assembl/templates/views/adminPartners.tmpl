<div class="gr">
  <div class="gu gu-1of5">
    <nav class="sidebar-nav">
        <ul class="man pan adminMenu">
          <li>
            <a href="#edition" class="menu">{{ gettext('edit discussion') }}</a>
          </li>
          <li>
            <a href="#notifications" class="menu">{{ gettext('edit notifications') }}</a>
          </li>
          <li class="active">
            <a href="#partners" class="menu">{{ gettext('edit partners') }}</a>
          </li>
          <li class="mtxl">
            <a href="/{{ discussion.slug }}/">{{ gettext('back to discussion') }}</a>
          </li>
        </ul>
    </nav>
  </div>
  <div class="gu gu-3of4 admin-section">

    <div class="admin-title">
      <h3 class="h3">{{ gettext('partners') }}</h3>
    </div>
    <div id="content-container" class="content-container">

    <div class="gr">
      <% _.each(partners, function(partner){ %>
      <div class="gu gu-1of6">
        <div class="rc rcss">
          <a class="img-left avatar" href="#"><img src="<%= partner.get('logo')%>" width="60"></a>
          <div class="bd">
            <p><%= partner.get('name') %></p>
            <p><%= partner.get('description') %></p>
            <p><%= partner.get('homepage') %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

      <div class="gr">
        <div class="gu gu-1of2">
          <form class="core-form form-horizontal" method="post" action=".">
            <fieldset>

              <div class="control-group">
                <label for="name" class="control-label">Name of partner</label>
                <div class="controls">
                  <input type="text" class="partner-name" name="name" required>
                </div>
              </div>

              <div class="control-group">
                <label for="description" class="control-label">Description</label>
                <div class="controls">
                  <input type="text" class="partner-description" name="description" required>
                </div>
              </div>

              <div class="control-group">
                <label for="homepage" class="control-label">Home page</label>
                <div class="controls">
                  <input type="text" class="partner-homepage" name="homepage" required>
                </div>
              </div>

              <div class="control-group">
                <label for="logo" class="control-label">Url logo</label>
                <div class="controls">
                  <input type="text" class="partner-name" name="logo" required>
                </div>
              </div>

              <div class="control-group">
                <label for="is_initiator" class="control-label">is initiator</label>
                <div class="controls">
                  <input type="checkbox" class="partner-initiator" name="is_initiator"  required>
                </div>
              </div>

              <div class="form-actions ptm">
                <button class="btn btn-secondary js_add-partner" type="submit">Add partner</button>
              </div>

            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


