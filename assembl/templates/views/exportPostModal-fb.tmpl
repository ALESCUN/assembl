<div class="control-group">
  <label for="targetLocation" class="control-label">
    {{ gettext("Pick where to post to") }}:
  </label>
  <div class="controls">
    <select id="fb-supportedList" class='js_fb-supportedList'>
      <option value='null'></option>
      <option value="me">{{ gettext("Your Wall") }}</option>
      <option value="page">{{ gettext("Your Pages") }}</option>
      <option value="group">{{ gettext("Your Groups") }}</option>
    </select>
    <!-- <span>*</span> -->
  </div>
</div>

<div class="fb-targeted-form"></div>

<a class="fb-js_test_area mts hidden" href='#'>Click me for test</a>

<!-- This is where the message preview would go -->
<div class="form-break mts">{{ gettext("Suggested preview") }}:</div>

<div class='mts'>
  <p><%= messageBody %></p>
</div>

<div class="imagePlaceHolder mts" style='width: 170px; height: 170px; overflow: hidden; float: left;'>
  <img src='http://assembl.coeus.ca/static/css/themes/default/img/crowd2.jpg' style="
    margin-left: -700px;
    margin-top: -70px;
    ">
</div>

<div style="display: table; height: 170px;">
  <div class="control-group" style="float: right;">
    <div class="controls">
      <input type="text" id="attachmentName" class="input-large js_fb-suggested-name" placeholder="<%= suggestedName %>">
    </div>
  </div>

  <div class="control-group" style="float: right">
    <div class="controls">
      <input type="text" class="input-large js_fb-suggested-caption" placeholder="<%= suggestedCaption %>">
    </div>
  </div>

  <div class="control-group" style="float: right">
    <div class="controls">
      <textarea rows=3 class="input-large js_fb-suggested-description" placeholder="<%= suggestedDescription %>"></textarea>
    </div>
  </div>
</div>
