{% macro label_options() -%}
<span class="idealist-label-options">
    <a class="iconbutton icon-pencil"></a>
    <a class="iconbutton icon-rearrangeIdea"></a>
    <a class="iconbutton icon-copyfolder"></a>
</span>
{%- endmacro %}

<h3>Default .idealist</h3>
<ul class="idealist">
    <li class="idealist-item" data-idealist-level="1">
        <span class="idealist-label">A simple item in Idea list (.idealist-item)</span>
    </li>

    <li class="idealist-item" data-idealist-level="1">
        <span class="idealist-label">
            <span class="idealist-label-arrow"></span>
            Item level 1 closed with children
        </span>
    </li>

    <li class="idealist-item is-open" data-idealist-level="1">
        <span class="idealist-label">
            <span class="idealist-label-arrow"></span>
            Item level 1 open with children
        </span>
    </li>

    <li class="idealist-item" data-idealist-level="2">
        <span class="idealist-label">Item level 2</span>
    </li>

    <li class="idealist-item" data-idealist-level="2">
        <span class="idealist-label">
            <span class="idealist-label-arrow"></span>
            Item level 2 with children
        </span>
    </li>

    {% for i in '1234' %}
        <li class="idealist-item is-open" data-idealist-level="{{i}}">
            <span class="idealist-label">
                {% if not loop.last %}<span class="idealist-label-arrow"></span>{% endif %}
                Item level {{i}}
            </span>
            <div class="fixedcounter">{{i}}</div>
        </li>
    {% endfor %}
</ul>

<div class="spacer"></div>

<h3>Draggable states</h3>
<ul class="idealist">
    <li class="idealist-item" data-idealist-level="1">
        <span class="idealist-label">.idealist-item</span>
    </li>

    <li class="idealist-item is-dragover" data-idealist-level="1">
        <span class="idealist-label">.idealist-item.is-dragover</span>
    </li>

    <li class="idealist-item is-dragover-below" data-idealist-level="1">
        <span class="idealist-label">.idealist-item.is-dragover-below</span>
    </li>
</ul>

<div class="spacer"></div>

<h3>Idea list with checkboxes</h3>
<ul class="idealist">
    {% for i in "1234" %}
    <li class="idealist-item is-open" data-idealist-level="{{i}}">
        <span class="idealist-checkbox">
            <input type="checkbox" />
        </span>
        <span class="idealist-label">
            {% if not loop.last %}<span class="idealist-label-arrow"></span>{% endif %}
            List item with checkbox level {{i}}
            {{ label_options() }}
        </span>
    </li>
    {% endfor %}
</ul>

<div class="spacer"></div>

<h3>Form inside ( .idealist-item.is-form-open )</h3>
<ul class="idealist">
    <li class="idealist-item is-form-open">
        <span class="idealist-label">.idealist-item</span>

        <form class="form margin">

            <label class="formlabel">Titre</label>
            <input type="text" class="formfield" />

            <div class="spacer"></div>

            <label class="formlabel">Description</label>
            <textarea class="formtextarea" ></textarea>
        </form>
    </li>
</ul>


<div class="spacer"></div>

<h3>Idea list Dark ( .idealist--dark )</h3>
<ul class="idealist idealist--dark">
    <li class="idealist-item">
        <span class="idealist-label">
            Simple Item
        </span>
    </li>
    {% for i in '1234' %}
        <li class="idealist-item is-open" data-idealist-level="{{i}}">
            <span class="idealist-label">
                {% if not loop.last %}<span class="idealist-label-arrow"></span>{% endif %}
                Item level {{i}}
            </span>
            <div class="fixedcounter">{{i}}</div>
        </li>
    {% endfor %}
</ul>
