{% extends 'base.jinja2' %}

{% block content %}
<div class="panelarea">
    <ul class="discussionlist">
        {% for discussion in discussions %}
        <li>
            <span class="discussion">
            <a href='{{ discussion.slug }}/'>{{ discussion.topic }}</a>
            </span>
        </li>
        {% else %}
            <em>{% trans %}There are no discussions on this server yet{% endtrans %}</em>
        {% endfor %}
    </ul>
</div>
{% endblock %}